@model DapperDemo.Models.MasterDetails

@{
    ViewBag.Title = "GetMultipleRecord";
}

<h2>Multiple Record</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <h2> Employee Record</h2>
            <div class="col-md-12">
                <table class="table table-hover col-md-3">

                    <tr>
                        <th>
                            Empno
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Dept
                        </th>

                    </tr>


                    @{
                        //To make unique Id
                        int i = 0;
                        foreach (var item in Model.EmpPersonal)
                        {

                            <tr>
                                <td>


                                    @Html.DisplayFor(o => o.EmpPersonal[i].empno)
                                </td>
                                <td>
                                    @Html.DisplayFor(o => o.EmpPersonal[i].nam)


                                </td>
                                <td>
                                    @Html.DisplayFor(o => o.EmpPersonal[i].dept)
                                </td>

                            </tr>

                            i++;
                        }
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            <h2>Student Record</h2>
            <div class="col-md-12">
                <table class="table table-hover col-md-3">

                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Subject
                        </th>


                    </tr>


                    @{
                        //To make unique Id
                        int j = 0;
                        foreach (var item in Model.StudPersonal)
                        {

                            <tr>
                                <td>


                                    @Html.DisplayFor(o => o.StudPersonal[j].nam)
                                </td>
                                <td>
                                    @Html.DisplayFor(o => o.StudPersonal[j].Sub2)


                                </td>

                            </tr>

                            j++;
                        }
                    }
                </table>
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back To Main Menu", "index")

